@model Project2WooxTravel2.Entities.Reservation

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/ReservationPopUp/styles.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMZ5R5/2c0JQlE8U6/nWxDAWZ1zC3fEHLK/Xc5E" crossorigin="anonymous">
    <title>Rezervasyon Popup'ı</title>
</head>
<body>
    <div id="reservationPopup" class="popup">
        <div class="popup-content">
            <span class="close" id="closePopup">&times;</span>
            <h2><i class="fas fa-calendar-alt"></i> Size Ulaşalım!</h2>
            @using (Html.BeginForm("PopUpReservationSave", "Default", FormMethod.Post))
            {

                <label for="Name"><i class="fas fa-user"></i> İsim:</label>
                <input type="text" id="Name" name="Name" placeholder="Adınızı girin" required>

                <label for="Phone"><i class="fas fa-envelope"></i> Telefon:</label>
                <input type="tel" id="Phone" name="Phone" placeholder="Telefon numaranızı girin" required>

                <label for="PersonCount"><i class="fas fa-users"></i> Misafir Sayısı:</label>
                <input type="number" id="PersonCount" name="PersonCount" min="1" placeholder="Misafir sayısını girin" required>

                <label for="Description"><i class="fas fa-users"></i> Tur:</label>
                @Html.DropDownListFor(x => x.Description, (List<SelectListItem>)ViewBag.ReservationDropDL, new { @class = "form-control" })
                <br />

                <button type="submit" class="submit-button"><i class="fas fa-check"></i> Rezervasyonu Tamamla</button>
            }

        </div>
    </div>

    <script src="~/ReservationPopUp/script.js"></script>
</body>
</html>
