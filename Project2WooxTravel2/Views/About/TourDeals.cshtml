@model List<Project2WooxTravel2.Entities.Destination>

<div class="weekly-offers">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>En Keyifli Tatiller İçin En İyi Teklifler</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="owl-weekly-offers owl-carousel">

                    @foreach (var item in Model)
                    {

                        <div class="item">
                            @* x *@
                            <div class="thumb">
                                <img src="@item.ImageUrl" style="height: 450px; width: 500px; object-fit: cover;" alt="">
                                <div class="text">
                                    <h4>@item.Country<br><span><i class="fa fa-try"></i>@item.Price TL</span></h4>
                                    <h6><br><span>/Bir Kişi</span></h6>
                                    <div class="line-dec"></div>
                                    <ul>
                                        <li>Paket Kapsamı:</li>
                                        <li><i class="fa fa-moon"></i> @item.DayNight Gün - @(item.DayNight-1) Gece</li>
                                        <li><i class="fa fa-plane"></i> Uçak Dahil</li>
                                        <li><i class="fa fa-users"></i> @item.Capacity Kişi Kapasiteli</li>
                                        <li><i class="fa fa-building"></i> Günlük Rotalar</li>
                                    </ul>
                                    <div class="main-button">
                                        <a href="/Default/PartialPopUpReservation/">Rezervasyon Oluştur</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>

