@model List<Project2WooxTravel2.Entities.Message>

@{
    ViewBag.Title = "SendBox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<h2>SendBox</h2>

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Giden Mesaj Tablosu</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Alıcı</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Mesajı Aç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ReceiverMail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToShortDateString()</td>
                                        <td>@item.IsRead</td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#messageModal"
                                                    onclick="openMessageModal('@item.Subject', '@item.Content', '@item.SendDate.ToShortDateString()')">
                                                <i class="fas fa-envelope-open-text"></i>
                                                Mesajı Aç
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Gönder</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">Mesaj Başlığı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Tarih:</strong> <span id="modalDate"></span></p>
                <p><strong>İçerik:</strong></p>
                <p id="modalContent"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="confirmCloseModal()">Kapat</button>
            </div>
        </div>
    </div>
</div>


<script>
    function openMessageModal(subject, content, date) {
        document.getElementById("messageModalLabel").textContent = subject;
        document.getElementById("modalContent").textContent = content;
        document.getElementById("modalDate").textContent = date;
    }

    function confirmCloseModal() {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Mesaj Detayını Kapatmak İstediğine Emin Misin?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet',
            cancelButtonText: 'Hayır'
        }).then((result) => {
            if (result.isConfirmed) {
                // Modal'ı kapatma
                $('#messageModal').modal('hide');  // Bu satır çalışmıyorsa
                // Alternatif
                $('#messageModal').removeClass('show');
                $('.modal-backdrop').remove();
            }
        });
    }
</script>
