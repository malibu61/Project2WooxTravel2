@model List<Project2WooxTravel2.Entities.Message>

@{
    ViewBag.Title = "InBox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>InBox</h2>

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Gelen Mesaj Tablosu</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Gönderici</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Mesajı Aç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.SenderMail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToShortDateString()</td>
                                        <td>@item.IsRead</td>
                                        <td><a href="#" class="btn btn-warning">Mesajı Aç</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Gönder</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
