@model Project2WooxTravel2.Entities.Admin

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Profil Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            @Html.HiddenFor(x => x.AdminId)

                            <label>Ad</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <br />

                            <label>Soyad</label>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                            <br />

                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />

                            <label>Email</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />

                            <label>Kullanıcı Adı</label>
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                            <br />

                            <label>Şifre</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                            <br />

                            <button class="btn btn-primary">Profil Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
