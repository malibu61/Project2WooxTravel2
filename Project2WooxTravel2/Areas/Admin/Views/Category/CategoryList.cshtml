@model List<Project2WooxTravel2.Entities.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategoriler</div>
                    </div>
                    <div class="card-body">
                       
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Kategori Id</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryId</td>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Admin/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Category/CategoryUpdate/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="#" class="btn btn-primary">Yeni Kategori Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
